# ===========================================
# MANAKHAAH ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# MODE CONFIGURATION
# ===========================================
# Set to "false" for production with real database
USE_MOCK_DATA=true
NEXT_PUBLIC_USE_MOCK_DATA=true

# ===========================================
# DATABASE (Required for production)
# ===========================================
# PostgreSQL connection string
# Get free database from: https://supabase.com or https://neon.tech
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secure-secret-here"

# ===========================================
# EMAIL SERVICE (Required for auth features)
# ===========================================
# Get API key from: https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxx"
FROM_EMAIL="noreply@yourdomain.com"

# ===========================================
# IMAGE UPLOADS (Required for business photos)
# ===========================================
# Get credentials from: https://cloudinary.com
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# ===========================================
# MAPS (Optional - falls back to Leaflet)
# ===========================================
# Get token from: https://www.mapbox.com
NEXT_PUBLIC_MAPBOX_TOKEN=""

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Bay Area Default Location (Fremont, CA)
NEXT_PUBLIC_DEFAULT_LAT="37.5485"
NEXT_PUBLIC_DEFAULT_LNG="-121.9886"
NEXT_PUBLIC_DEFAULT_CITY="Fremont, CA"
