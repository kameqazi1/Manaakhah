model NotificationDigest {
  id         String    @id @default(cuid())
  userId     String
  frequency  String // daily, weekly
  lastSentAt DateTime?
  nextSendAt DateTime
  isEnabled  Boolean   @default(true)

  @@unique([userId])
}

