  updatedAt   DateTime @updatedAt
}

model ABTest {
  id          String    @id @default(cuid())
  name        String
  description String?
  variants    Json // [{name: "control", weight: 50}, {name: "variant", weight: 50}]
  metrics     String[] // ["conversion", "engagement"]
  isActive    Boolean   @default(false)
  startDate   DateTime?
  endDate     DateTime?
  results     Json?
  createdAt   DateTime  @default(now())

  @@index([isActive])
}
