// =============================================================================
// MODERATION & APPEALS
// =============================================================================

model ContentReport {
  id          String       @id @default(cuid())
  reporterId  String
  contentType String // review, post, business, user
  contentId   String
  reason      ReportReason
  details     String?      @db.Text
  status      ReportStatus @default(PENDING)
  assignedTo  String?
  resolvedAt  DateTime?
  resolution  String?
  createdAt   DateTime     @default(now())

  reporter User @relation(fields: [reporterId], references: [id], onDelete: Cascade)

  @@index([contentType, contentId])
  @@index([status])
  @@index([reporterId])
}

model Appeal {
  id          String       @id @default(cuid())
  userId      String
  contentType String // review, post, business, account
  contentId   String?
  reason      String       @db.Text
  evidence    String[] // URLs to supporting documents
  status      AppealStatus @default(PENDING)
  assignedTo  String?
  resolution  String?      @db.Text
  resolvedAt  DateTime?
  createdAt   DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model ModerationRule {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String // keyword, pattern, ai
  pattern     String?
  action      String // flag, hide, delete, notify
  isActive    Boolean  @default(true)
  hitCount    Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([isActive])
}

